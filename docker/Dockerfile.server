FROM python:3.12-slim

WORKDIR /app

# System packages needed for phoebe (matplotlib, fonts, etc.)
RUN apt-get update && apt-get install -y \
    libfreetype6-dev libpng-dev libfontconfig1 curl \
    && rm -rf /var/lib/apt/lists/*

# Install dependencies
COPY docker/requirements.server.txt .
RUN pip install --no-cache-dir -r requirements.server.txt

# Copy just the server code
COPY server/server.py ./server/server.py

# Run the PHOEBE server
CMD ["python", "server/phoebe_server.py"]
